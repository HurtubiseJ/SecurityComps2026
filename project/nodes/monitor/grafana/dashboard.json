{
  "dashboard": {
    "title": "DDoS Proxy Monitor",
    "uid": "ddos-proxy-main",
    "timezone": "browser",
    "refresh": "5s",
    "time": { "from": "now-15m", "to": "now" },
    "templating": {
      "list": [
        {
          "name": "target",
          "type": "query",
          "label": "Target Node",
          "query": "label_values(up{job=\"nodes\", instance=~\"target.*\"}, instance)",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "refresh": 2,
          "includeAll": false,
          "current": { "text": "target1:8000", "value": "target1:8000" }
        },
        {
          "name": "attacker",
          "type": "query",
          "label": "Attacker Nodes",
          "query": "label_values(up{job=\"nodes\", instance=~\"attacker.*\"}, instance)",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "current": { "text": "All", "value": "$__all" }
        }
      ]
    },
    "panels": [

      {
        "id": 100, "type": "row", "title": "PROXY (nginx)",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }, "collapsed": false
      },
      {
        "id": 1,
        "title": "Requests / sec",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
        "targets": [{ "expr": "rate(nginx_http_requests_total[30s])", "legendFormat": "req/s" }],
        "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
        "targets": [
          { "expr": "nginx_connections_active", "legendFormat": "active" },
          { "expr": "nginx_connections_reading", "legendFormat": "reading" },
          { "expr": "nginx_connections_writing", "legendFormat": "writing" },
          { "expr": "nginx_connections_waiting", "legendFormat": "waiting" }
        ]
      },
      {
        "id": 3,
        "title": "Accepted vs Handled (dropped = gap)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
        "targets": [
          { "expr": "rate(nginx_connections_accepted[30s])", "legendFormat": "accepted/s" },
          { "expr": "rate(nginx_connections_handled[30s])", "legendFormat": "handled/s" }
        ],
        "fieldConfig": { "defaults": { "unit": "cps", "custom": { "fillOpacity": 15 } } }
      }
    ]
  }
}