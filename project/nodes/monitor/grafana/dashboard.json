{
  "dashboard": {
    "title": "DDoS Proxy Monitor",
    "uid": "ddos-proxy-main",
    "timezone": "browser",
    "refresh": "5s",
    "time": { "from": "now-15m", "to": "now" },
    "templating": {
      "list": [
        {
          "name": "target",
          "type": "query",
          "label": "Target Node",
          "query": "label_values(up{job=\"nodes\", instance=~\"target.*\"}, instance)",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "refresh": 2,
          "includeAll": false,
          "current": { "text": "target1:8000", "value": "target1:8000" }
        },
        {
          "name": "attacker",
          "type": "query",
          "label": "Attacker Nodes",
          "query": "label_values(up{job=\"nodes\", instance=~\"attacker.*\"}, instance)",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "refresh": 2,
          "includeAll": true,
          "multi": true,
          "current": { "text": "All", "value": "$__all" }
        }
      ]
    },
    "panels": [

      {
        "id": 100, "type": "row", "title": "PROXY (nginx)",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }, "collapsed": false
      },
      {
        "id": 1,
        "title": "Requests / sec",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
        "targets": [{ "expr": "rate(nginx_http_requests_total[30s])", "legendFormat": "req/s" }],
        "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
        "targets": [
          { "expr": "nginx_connections_active", "legendFormat": "active" },
          { "expr": "nginx_connections_reading", "legendFormat": "reading" },
          { "expr": "nginx_connections_writing", "legendFormat": "writing" },
          { "expr": "nginx_connections_waiting", "legendFormat": "waiting" }
        ]
      },
      {
        "id": 3,
        "title": "Accepted vs Handled (dropped = gap)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
        "targets": [
          { "expr": "rate(nginx_connections_accepted[30s])", "legendFormat": "accepted/s" },
          { "expr": "rate(nginx_connections_handled[30s])", "legendFormat": "handled/s" }
        ],
        "fieldConfig": { "defaults": { "unit": "cps", "custom": { "fillOpacity": 15 } } }
      },

      {
        "id": 200, "type": "row", "title": "TARGET ($target)",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }, "collapsed": false
      },
      {
        "id": 4,
        "title": "HTTP Requests / sec",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
        "targets": [{ "expr": "rate(http_requests_total{instance=~\"$target\"}[30s])", "legendFormat": "{{method}} {{status}}" }],
        "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 5,
        "title": "Request Duration (p95)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 10 },
        "targets": [{ "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{instance=~\"$target\"}[30s]))", "legendFormat": "p95" }],
        "fieldConfig": { "defaults": { "unit": "s", "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 6,
        "title": "In-Flight Requests & TCP Established",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 10 },
        "targets": [
          { "expr": "http_inflight_requests{instance=~\"$target\"}", "legendFormat": "in-flight HTTP" },
          { "expr": "node_network_tcp_count{instance=~\"$target\", type=\"ESTABLISHED\"}", "legendFormat": "TCP established" }
        ]
      },
      {
        "id": 7,
        "title": "Target CPU (user + system)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 18 },
        "targets": [{ "expr": "node_cpu_time_pct{instance=~\"$target\", mode=~\"user|system\"}", "legendFormat": "{{mode}}" }],
        "fieldConfig": { "defaults": { "unit": "percent", "max": 100, "custom": { "fillOpacity": 20, "stacking": { "mode": "normal" } } } }
      },
      {
        "id": 8,
        "title": "Target Memory",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 18 },
        "targets": [{ "expr": "process_resident_memory_bytes{instance=~\"$target\"}", "legendFormat": "RSS" }],
        "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 9,
        "title": "Target Network I/O",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 18 },
        "targets": [
          { "expr": "rate(node_network_total_bytes_total{instance=~\"$target\", type=\"recv\"}[30s])", "legendFormat": "RX bytes/s" },
          { "expr": "rate(node_network_total_bytes_total{instance=~\"$target\", type=\"sent\"}[30s])", "legendFormat": "TX bytes/s" }
        ],
        "fieldConfig": { "defaults": { "unit": "Bps", "custom": { "fillOpacity": 15 } } }
      },

      {
        "id": 300, "type": "row", "title": "ATTACKERS ($attacker)",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 26 }, "collapsed": false
      },
      {
        "id": 10,
        "title": "Attack Status",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 27 },
        "targets": [{ "expr": "attack_status{instance=~\"$attacker\"}", "legendFormat": "{{node}}" }],
        "fieldConfig": { "defaults": { "mappings": [{"type": "value", "options": {"0": {"text": "IDLE", "color": "green"}, "1": {"text": "ATTACKING", "color": "red"}}}] } }
      },
      {
        "id": 11,
        "title": "Active Attack Connections",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 27 },
        "targets": [{ "expr": "attack_active_connections{instance=~\"$attacker\"}", "legendFormat": "{{node}}" }]
      },
      {
        "id": 12,
        "title": "Attacker CPU (user + system)",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 27 },
        "targets": [
          { "expr": "sum by (node) (node_cpu_time_pct{instance=~\"$attacker\", mode=~\"user|system\"})", "legendFormat": "{{node}}" }
        ],
        "fieldConfig": { "defaults": { "unit": "percent", "max": 100, "custom": { "fillOpacity": 15 } } }
      },
      {
        "id": 13,
        "title": "Attacker Network TX",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 27 },
        "targets": [
          { "expr": "rate(node_network_total_bytes_total{instance=~\"$attacker\", type=\"sent\"}[30s])", "legendFormat": "{{node}} TX" }
        ],
        "fieldConfig": { "defaults": { "unit": "Bps", "custom": { "fillOpacity": 15 } } }
      },

      {
        "id": 400, "type": "row", "title": "SYSTEM OVERVIEW",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 33 }, "collapsed": false
      },
      {
        "id": 14,
        "title": "All Nodes - TCP Established",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 34 },
        "targets": [{ "expr": "node_network_tcp_count{type=\"ESTABLISHED\"}", "legendFormat": "{{node}}" }]
      },
      {
        "id": 15,
        "title": "All Nodes - Network Packets / sec",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 34 },
        "targets": [
          { "expr": "rate(node_network_total_packets_total{type=\"sent\"}[30s])", "legendFormat": "{{node}} TX" },
          { "expr": "rate(node_network_total_packets_total{type=\"recv\"}[30s])", "legendFormat": "{{node}} RX" }
        ],
        "fieldConfig": { "defaults": { "unit": "pps", "custom": { "fillOpacity": 15 } } }
      }
    ]
  },
  "overwrite": true
}
