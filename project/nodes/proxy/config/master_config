    “forward_host”: str, (137.22.4.153) 
    “forward_port”: str, (8000)

    // Where to receive data (proxy~grape01)
    “port”: str, (8000)
    “host”: str, (137.22.4.154)


    “monitoring”: {  // Config for monitoring module on given node
        “enabled”: true,
        “metrics”: [
